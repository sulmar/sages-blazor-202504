@page "/customers"
@using BlazorServerApp.Abstractions
@using BlazorServerApp.Components.Shared
@using BlazorServerApp.Models
@inject ICustomerRepository repository

<Header Name="Customers" Description="Lorem ipsum">
    <img src="https://placehold.co/300x200" />
</Header>

<div>
    <label for="searchText">Type search text: </label>
    <input id="searchText" name="searchText" type="text" @bind="@searchText" @onkeydown="@Enter" />
    <button type="button" @onclick="@Search" class="btn btn-primary">Search</button>
</div>

<CustomersTableTemplate Customers="@customers" />

@code {

    private bool ShowMessage = true;

    private List<Customer> customers = new List<Customer>();

    private string searchText = string.Empty;

    // [Inject]
    // public ICustomerRepository repository { get; set; }

    protected override void OnInitialized()
    {
        customers = repository.GetAll();
    }

    private void Search()
    {
        Console.WriteLine($"Searching {searchText}...");

        customers = repository.Get(searchText);
    }

    private void Enter(KeyboardEventArgs e)
    {
        if (e.Code == "Enter" || e.Code == "NumpadEnter")
        {
            Search();   
        }
    }
}
